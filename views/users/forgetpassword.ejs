<%-include('../layouts/header.ejs') %>



<main >
    <div class="container" >

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="index.html" class="logo d-flex align-items-center w-auto">
                  <img src="" alt="">
                  <span class="d-none d-lg-block">MOTOGEAR</span>
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3" style="border-radius: 25px; background-color: #FF084E ;">

                <div class="card-body" style="background-color: #fff; border-radius: 12em 23px 23px 23px">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4" >Verify Identity</h5>
                    <p class="text-center small">Enter your Contact Number</p>
                  </div>

                  <form class="row g-3 needs-validation" novalidate method="post">

                    <div class="col-12">
                      <label for="yourUsername" class="form-label">Contact Number</label>
                      <div class="input-group has-validation">  
                        <input style="border-radius: 20px;" type="text" name="mobile" class="form-control" id="yourUsername" required>
                        <div class="invalid-feedback">Please enter your 10-Digit Contact Number</div>
                        
                        
                       
                      </div>
                    </div>

                  

                
                    <div class="col-12">
                      <button class="btn  w-100"  style="background-color: #fff;border-color: #FF084E;border-radius: 25px ;color: #FF084E;"  type="submit">Request OTP</button>
                    </div>

                    
                    
                  
                   

                    <% if(typeof message!=='undefined' ){ %>
                        <P style="color: rgb(239, 15, 15);">
                            <%= message %> <br> <a href="/register">Register Now</a>
                        </P>
                        <% } %>
                   

                    </div>
                    
                    
                  
                     
                   
                  </form>

                </div>
              </div>

            

            </div>
          </div>
        </div>

      </section>

    </div>
  </main><!-- End #main -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>



<%-include('../layouts/footer.ejs') %>