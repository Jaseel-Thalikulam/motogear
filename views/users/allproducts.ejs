<script>
function addToWishlist(proId) {
   
    console.log(proId)
 $.ajax({
    url: '/addToWishlist',
    data: {
      productId: proId
    },
    method: "post",
    success: (response) => {
      if (response.success) {
        $('.table-shopping-cart').load('/wishlist .table-shopping-cart')
        console.log(response);
        Swal.fire({
          title: 'Added',
          text: 'Item added to wishlist',
          icon: 'success',
          timer: 1000,
          showConfirmButton: false
        })
      } else {
        Swal.fire({
          text: 'Item already in wishlist',
          icon: 'info',
          timer: 1000,
          showConfirmButton: false
        })
      }
      console.log(response);
    }
  })
 }
