  <main id="main" class="main">

    <div class="pagetitle">
    
      <h1>Edit-Product</h1>
     
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
          <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
          <li class="breadcrumb-item active">Edit-Product</li>
        
        </ol>

       
      </nav>
  
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Enter Product Details</h5>
          <!-- Floating Labels Form -->
          <form class="row g-3" method="post" action="" >
            <div class="col-md-12">
              <div class="form-floating">
                <input type="text" maxlength="42" name="productname" class="form-control"value="<%= product.product %>" id="floatingName" placeholder="Product Name">
                <label for="floatingName">Product Name</label>
              </div>
            </div>

            <div class="col-md-4">
              <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" aria-label="State" name="category">
                  <option selected><%= product.Category %></option>
                
                  <% category.forEach(function(category) { %>

                    <% if(category.categoryStatus==true){ %>
                  <option ><%= category.category %></option>
                   <% }%>
                  <% }); %> 
                </select>
               

                <label for="floatingSelect">Category</label>
              </div>
            </div>
          

           
            <!-- <div class="row mb-3">
              <label for="inputNumber" class="col-sm-2 col-form-label">Upload Product Image</label>
              <div class="col-sm-10">
                <input class="form-control" multiple type="file"  id="formFile" name="image" onchange="viewImage(event)">
              </div>
            </div>
            -->

           

            <div class="col-12">
              <div class="form-floating">
                <textarea class="form-control" placeholder="Address" name="description" id="floatingTextarea" style="height: 100px;"><%= product.Description %></textarea>
                <label for="floatingTextarea">Description</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="number" name="stock" class="form-control" id="floatingEmail" value="<%= product.Stock %>" placeholder="Product Stock">
                <label for="floatingEmail">Product Stock</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-floating">
                <input type="number" name="price" class="form-control" id="floatingEmail"  value="<%= product.price %>"  placeholder="Product Price">
                <label for="floatingEmail">Product Price</label>
              </div>
            </div>
            <input type="hidden" name="id" value="<%= product._id %>">
         
          
    
   
            
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
           
              <p style="color: green;"></p>
            </div>

            <%
            if(typeof message!=='undefined'){
               %>
               <p style="color: #08aa08;"><%= message %></p>
               <%
       
            }
           
           %>
          </form><!-- End floating Labels Form -->


          <form method="post" action="/admin/updateimage" enctype="multipart/form-data" >

            

            <div class="row mb-3">
              <label for="inputNumber" class="col-sm-2 col-form-label">Upload Product Image</label>
              <div class="col-sm-10">
                <input class="form-control" multiple type="file"  id="formFile" name="image" onchange="viewImage(event)">
              </div>
            </div>

            <td style="height: 200px; width: 200px; align-content: center;" >   
              <% for(i=0;i<product.image.length;i++){%>
                          
  
              <img style="height: 200px; width:200px; border-radius: 5px;margin-bottom:10px ;" src="/assets/img/<%=product.image[i]%>" id="imgView"> 
  
  
              <% } %>
          </td>   


            <input type="hidden" name="id" value="<%= product._id %>">

            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit Image</button>
              <button type="reset" class="btn btn-secondary">Reset</button>
           
              <p style="color: green;"></p>
            </div>
           

          </form>

        </div>
      </div>
      
      
       <script>
        function viewImage(event){
          
        
          document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
          
        }
       

       </script>
    

