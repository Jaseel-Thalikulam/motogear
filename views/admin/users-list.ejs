     <!-- Recent Sales -->
     <div class="col-12">
      <div class="card recent-sales overflow-auto">

        <div class="card-body">
          <h5 class="card-title">Users</h5>

          <table class="table table-borderless datatable">
            <thead>
              <tr>
                <th scope="col">SI.No</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Mobile</th>
              
              <th scope="col">Status</th>
          
              <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>

              <%
              if(userlist.length > 0){
              for(let i=userlist.length-1;i>=0;i--){
                  %>
  
                  <% if(userlist[i].is_admin==0){ %>

                    <tr>
                      <th scope="row"><%= userlist.length-i %></th>
                      <td><%= userlist[i].name %></td>
                      <td><%= userlist[i].email %></td>
                      <td><%= userlist[i].mobile %></td>
                      <%if(userlist[i].is_active==true){ %>
        
                      <td><span class="badge bg-success">Active</span></td>
                      <%}else{%>
                        <td><span class="badge bg-danger">Inactive</span></td>
                        <%}%>
                      <td>
        
                        <div class="dropdown">
        <button class="btn" style="font-family: monospace;" type="button" data-toggle="dropdown" aria-expanded="false">
          <span style="font-size: 20px; color: #4c4658; font-family: Arial, Helvetica, sans-serif;">ï¸™</span>
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item"  href="/admin/edit-user?id=<%= userlist[i]._id %>">Edit</a>
        
        
          <a class="dropdown-item"  onclick="return confirm('Do you really intend to remove User  ?')" href="/admin/delete-user?id=<%= userlist[i]._id %>">Delete</a>
        
          <% if(userlist[i].is_active==true){%>
            <a class="dropdown-item"  href="/admin/block-user?id=<%= userlist[i]._id %>">Block</a>
         <% }else{%>
          <a class="dropdown-item"  href="/admin/block-user?id=<%= userlist[i]._id %>">Unblock</a>
        <% }%>
        </div>
        </div>
                      </td>
                    </tr>
                  
                    <%}}}%>
                  


            </tbody>
          </table>

