    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Please Enter the details</h5>

        <!-- Floating Labels Form -->
        <form class="row g-3" action="" method="post" onsubmit="return validateForm()">
          <div class="col-md-12">
            <div class="form-floating">
              <input type="text" name="category" class="form-control" id="floatingName" placeholder="Category Name"
                required>
              <label for="floatingName">Category Name</label>
            </div>
          </div>


          <div class="col-12">
            <div class="form-floating">
              <textarea class="form-control" name="description" placeholder="Address" id="floatingTextarea"
                style="height: 100px;" required></textarea>
              <label for="floatingTextarea">Description</label>
            </div>
          </div>



          <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
            <p style="color: red;"></p>
          </div>



          <% if(typeof messagered!=='undefined' ){ %>
            <p style="color: red;">
              <%= messagered %>
            </p>
            <% } %>

        </form><!-- End floating Labels Form -->

