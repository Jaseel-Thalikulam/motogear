     <div class="col-12">
      <div class="card recent-sales overflow-auto">

       

        <div class="card-body">
          <h5 class="card-title">Products </h5>

          <table class="table table-borderless datatable">
            <thead>
              <tr>
                <th scope="col">SI.No</th>
              <th scope="col">Product</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">Stock</th>
              <th scope="col">Price</th>
              <th scope="col">Image</th>
              <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <%
              if(product.length > 0){
              for(let i=product.length-1;i>0;i--){
          
                  %>
                  <tr>
                    <th scope="row"><%= product.length-i%></th>
                    <td><%= product[i].product %></td>
                  <td><%= product[i].Category %></td>
                  <td><%= product[i].Description %></td>
                  <td><%= product[i].Stock %></td>
                  <td><%= product[i].price %></td>
                  <td> <img style="height: 64px ; width:64px ;" src="/assets/img/<%= product[i].image[0]%>" alt=""> </td>
      
      
                    <td>
      
                                      <div class="dropdown">
                      <button class="btn" style="font-family: monospace;" type="button" data-toggle="dropdown" aria-expanded="false">
                        <span style="font-size: 20px; color: #4c4658; font-family: Arial, Helvetica, sans-serif;">ï¸™</span>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item"  href="/admin/products/editproduct?id=<%= product[i]._id %>">Edit</a>
      
                        <%if(product[i].show==true){ %>

                          <a class="dropdown-item"  href="/admin/unlist-product?id=<%= product[i]._id %>">Unlist</a>

                          <%}else{%>
                           
                            <a class="dropdown-item"  href="/admin/unlist-product?id=<%= product[i]._id %>">List</a>

                            <%}%>
                      </div>
                    </div>
      
                    </td>
                  
                  </tr>
      
              <%
            }
            }else{
            %>
            <tr>
                <td colspan="3">Products Not Found</td>
            </tr>
            
            <%
            }
            
            %>

            
            </tbody>
          </table>

